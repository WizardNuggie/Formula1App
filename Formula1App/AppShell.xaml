<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Formula1App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Formula1App.Views">
    <Shell.FlyoutHeader>
        <Border Margin="0,0,0,10" BackgroundColor="#E11900">
            <Label
                FontAttributes="Bold"
                FontSize="30"
                HeightRequest="80"
                HorizontalOptions="Center"
                Text="F1"
                TextColor="White"
                VerticalTextAlignment="Center" />
        </Border>
    </Shell.FlyoutHeader>
    <FlyoutItem
        Title="News"
        FlyoutDisplayOptions="AsMultipleItems"
        Icon="news.png">
        <ShellContent
            Title="News"
            ContentTemplate="{DataTemplate local:NewsView}"
            Icon="news.png"
            Route="News" />
    </FlyoutItem>
    <FlyoutItem
        Title="Standings"
        FlyoutDisplayOptions="AsSingleItem"
        Icon="standings.png">
        <ShellContent
            Title="Drivers"
            ContentTemplate="{DataTemplate local:DriverStandingsView}"
            Icon="driver_standings.png"
            Route="DriverStandings" />
        <ShellContent
            Title="Constructors"
            ContentTemplate="{DataTemplate local:ConstStandingsView}"
            Icon="const_standings.png"
            Route="ConstStandings" />
    </FlyoutItem>
</Shell>
