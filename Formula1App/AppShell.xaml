<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Formula1App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
    x:DataType="viewmodel:AppShellViewModel"
    xmlns:local="clr-namespace:Formula1App.Views"
    Shell.TabBarForegroundColor="#E11900"
    Shell.TabBarTitleColor="#E11900">
    <Shell.FlyoutHeader>
        <Border Margin="0,0,0,10" BackgroundColor="#E11900">
            <Label
                FontAttributes="Bold"
                FontSize="30"
                HeightRequest="80"
                HorizontalOptions="Center"
                Text="F1"
                TextColor="White"
                VerticalTextAlignment="Center" />
        </Border>
    </Shell.FlyoutHeader>
        <FlyoutItem
            Title="News"
            FlyoutDisplayOptions="AsMultipleItems"
            Icon="news.png">
            <ShellContent
                Title="News"
                ContentTemplate="{DataTemplate local:NewsView}"
                Icon="news.png"
                Route="News" />
        </FlyoutItem>
    <FlyoutItem
        Title="Standings"
        FlyoutDisplayOptions="AsSingleItem"
        Icon="standings.png">
        <ShellContent
            Title="Drivers"
            ContentTemplate="{DataTemplate local:DriverStandingsView}"
            Icon="driver_standings.png"
            Route="DriverStandings" />
        <ShellContent
            Title="Constructors"
            ContentTemplate="{DataTemplate local:ConstStandingsView}"
            Icon="const_standings.png"
            Route="ConstStandings"/>
    </FlyoutItem>
    <FlyoutItem
        IsVisible="{Binding IsWriter}"
        Title="Add Articles"
        FlyoutDisplayOptions="AsMultipleItems"
        Icon="add_article.png">
        <ShellContent
            Title="Add Article"
            Icon="add_article.png"
            ContentTemplate="{DataTemplate local:AddArticlesView}"
            Route="AddArticle"/>
    </FlyoutItem>
    <FlyoutItem
        IsVisible="{Binding IsWriter}"
        Title="Your Articles"
        FlyoutDisplayOptions="AsSingleItem"
        Icon="your_articles.png">
        <ShellContent
            Title="Approved"
            ContentTemplate="{DataTemplate local:YourApprovedArticles}"
            Icon="approved.png"
            Route="Approved"/>
        <ShellContent
            Title="Pending"
            ContentTemplate="{DataTemplate local:YourPendingArticles}"
            Icon="pending.png"
            Route="Pending"/>
        <ShellContent
            Title="Declined"
            ContentTemplate="{DataTemplate local:YourDeclinedArticles}"
            Icon="remove.png"
            Route="Declined"/>
    </FlyoutItem>
    <FlyoutItem
        IsVisible="{Binding IsAdmin}"
        Title="Manage Users"
        FlyoutDisplayOptions="AsMultipleItems"
        Icon="admin.png">
        <ShellContent
            Title="Manage Users"
            Icon="admin.png"
            ContentTemplate="{DataTemplate local:ManageUsersView}"
            Route="ManageUsers"/>
    </FlyoutItem>
    <Shell.FlyoutFooter>
        <HorizontalStackLayout
            Padding="17,14">
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
            </HorizontalStackLayout.GestureRecognizers>
        <Image
            Source="logout.png"
            HeightRequest="25"/>
            <Label
                FontAttributes="Bold"
                Text="          Logout"/>
        </HorizontalStackLayout>
    </Shell.FlyoutFooter>
</Shell>
