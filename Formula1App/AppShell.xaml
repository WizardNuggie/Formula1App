<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Formula1App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Formula1App.Views">
    <Shell.FlyoutHeader>
        <Border
            BackgroundColor="#E11900"
            Margin="0,0,0,10">
            <Label
                HeightRequest="80"
                TextColor="White"
                Text="F1"
                HorizontalOptions="Center"
                VerticalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="30"/>
        </Border>
    </Shell.FlyoutHeader>
    <FlyoutItem
    FlyoutDisplayOptions="AsMultipleItems"
    Title="News"
    Icon="news.png">
        <ShellContent
        Title="News"
        Icon="news.png"
        ContentTemplate="{DataTemplate local:NewsView}"
        Route="News"/>
    </FlyoutItem>
    <FlyoutItem
        FlyoutDisplayOptions="AsSingleItem"
        Title="Standings"
        Icon="standings.png">
        <ShellContent
            Title="Drivers"
            Icon="driver_standings.png"
            ContentTemplate="{DataTemplate local:DriverStandingsView}"
            Route="DriverStandings"/>
        <ShellContent
            Title="Constructors"
            Icon="const_standings.png"
            ContentTemplate="{DataTemplate local:ConstStandingsView}"
            Route="ConstStandings"/>
    </FlyoutItem>
</Shell>
