<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
             x:Class="Formula1App.Views.DriverView"
             x:DataType="viewmodel:DriverViewModel"
             Title="">
    <ScrollView>
        <Grid
            RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
            ColumnDefinitions="*,*">
            <Grid
                HeightRequest="120"
                Padding="5"
                RowDefinitions="*,*,*"
                ColumnDefinitions="0.75*,0.5*,0.5*,3*,4*"
                Grid.ColumnSpan="2"
                BackgroundColor="#383840">
                <BoxView
                    Grid.RowSpan="3"
                    WidthRequest="5"
                    HeightRequest="78"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Color="{Binding Driver.TeamColor}"
                    Margin="20,0,0,0"/>
                <Label
                    TextColor="White"
                    FontFamily="F1Reg"
                    VerticalOptions="End"
                    Text="{Binding Driver.FirstName}"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"/>
                <Label
                    TextColor="White"
                    FontFamily="F1Bold"
                    VerticalOptions="Start"
                    Text="{Binding Driver.LastName}"
                    Grid.Column="1"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"/>
                <Label
                    TextColor="White"
                    FontFamily="F1Bold"
                    Text="{Binding Driver.PermanentNumber}"
                    HorizontalOptions="Center"
                    Grid.Column="1"
                    Grid.Row="2"/>
                <BoxView
                    WidthRequest="3"
                    HeightRequest="15"
                    Color="#7A7A80"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                    Grid.Column="2"
                    Grid.Row="2"
                    Margin="7,0"/>
                <Label
                    TextColor="White"
                    FontFamily="F1Reg"
                    Text="{Binding Driver.Constructor.name}"
                    HorizontalOptions="Start"
                    Grid.Column="3"
                    Grid.Row="2"/>
                <Image
                    Source="{Binding Driver.PhotoUrl}"
                    Margin="0, 0,-4,-5"
                    HeightRequest="120"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Grid.Column="4"
                    Grid.RowSpan="3"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>