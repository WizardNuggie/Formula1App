<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Formula1App.Models"
             xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
             xmlns:expander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
             x:DataType="viewmodel:AllNewsViewModel"
             x:Class="Formula1App.Views.AllNewsView">
    <RefreshView
        Command="{Binding RefreshCommand}"
        IsRefreshing="{Binding IsRefreshing}">
        <ScrollView
            x:Name="scrlview">
            <StackLayout>
                <Grid
                    ColumnDefinitions="*,0.25*"
                    RowDefinitions="*,*,10*">
                    <Grid
    RowDefinitions="*,*,*">
                        <Border
        Grid.RowSpan="3"
        Margin="-12,0,0,0"
        Stroke="#E11900"
        StrokeThickness="3"
        HeightRequest="60">
                            <Border.StrokeShape>
                                <RoundRectangle
                CornerRadius="15"/>
                            </Border.StrokeShape>
                        </Border>
                        <Label
        Grid.Row="1"
        FontAttributes="Bold"
        FontSize="30"
        Text="   All News"
        VerticalOptions="Start" />
                        <BoxView
        Margin="0,-7,0,0"
        Grid.Row="2"
        Color="White"
        HeightRequest="15"
        WidthRequest="12"
        VerticalOptions="Start"
        HorizontalOptions="End"/>
                        <BoxView
        Grid.Row="2"
        Color="White"
        HeightRequest="15"
        WidthRequest="317"
        VerticalOptions="Start"
        HorizontalOptions="Start"/>
                    </Grid>
                    <Frame
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="10,10,10,3"
                        Padding="5"
                        CornerRadius="10"
                        MinimumHeightRequest="30">
                        <expander:SfExpander AnimationDuration="120">
                            <expander:SfExpander.Header>
                                <Label Text="Filter By Subject" VerticalOptions="Center" />
                            </expander:SfExpander.Header>
                            <expander:SfExpander.Content>
                                <Grid ColumnDefinitions="*,0.25*" RowDefinitions="*">
                                    <Frame
                                        HeightRequest="45"
                                        CornerRadius="10"
                                        Padding="3"
                                        Margin="10,0,0,0">
                                        <Picker
                                            VerticalOptions="Center"
                                            Title="Filter by subject"
                                            x:DataType="model:Subject"
                                            HorizontalTextAlignment="Center"
                                            ItemDisplayBinding="{Binding Name}"
                                            ItemsSource="{Binding BindingContext.Subjects, Source={x:Reference scrlview}}"
                                            SelectedItem="{Binding BindingContext.SelectedSubject, Source={x:Reference scrlview}}"/>
                                    </Frame>
                                    <ImageButton
                                        Source="cancel.png"
                                        HeightRequest="50"
                                        WidthRequest="50"
                                        CornerRadius="10"
                                        Grid.Column="1"
                                        Command="{Binding ClearFilterCommand}"/>
                                </Grid>
                            </expander:SfExpander.Content>
                        </expander:SfExpander>
                    </Frame>
                    <CollectionView
                        x:Name="colview"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Articles}"
                        SelectedItem="{Binding SelectedArticle}"
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate
                                x:DataType="model:Article">
                                <Border
                                    Margin="8"
                                    Padding="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle
                                            CornerRadius="15" />
                                    </Border.StrokeShape>
                                    <Grid
                                        ColumnDefinitions="*,1.5*"
                                        RowDefinitions="*,4*">
                                        <Border
                                            Grid.RowSpan="2"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"
                                            Stroke="Transparent">
                                            <Border
                                                Grid.RowSpan="2"
                                                HeightRequest="80"
                                                MaximumWidthRequest="120"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Stroke="Transparent">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="15" />
                                                </Border.StrokeShape>
                                                <Image
                                                    HeightRequest="80"
                                                    Aspect="AspectFill"
                                                    Source="{Binding FullImagePath}"/>
                                            </Border>
                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Padding="0"
                                            HeightRequest="25"
                                            HorizontalOptions="Start"
                                            Stroke="#E11900"
                                            StrokeThickness="2"
                                            WidthRequest="100">
                                            <Border.StrokeShape>
                                                <RoundRectangle
                                                    CornerRadius="20" />
                                            </Border.StrokeShape>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="Center"
                                                Text="{Binding FirstSubject.Name}"
                                                TextColor="#E11900"
                                                VerticalOptions="Center" />
                                        </Border>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="20,0,0,0"
                                            Text="{Binding Title}" />
                                    </Grid>
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState
                                                Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter
                                                        Property="BackgroundColor"
                                                        Value="White"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState
                                                Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter
                                                        Property="BackgroundColor"
                                                        Value="White"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>