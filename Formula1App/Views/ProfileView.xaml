<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Formula1App.Views.ProfileView"
    xmlns:expander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
    xmlns:model="clr-namespace:Formula1App.Models"
    xmlns:modelext="clr-namespace:Formula1App.ModelsExt"
    xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
    x:DataType="viewmodel:ProfileViewModel"
    Title="Profile">
    <RefreshView>
        <ScrollView x:Name="scrlview">
            <StackLayout>
                <Frame
                    Grid.Row="9"
                    Grid.RowSpan="2"
                    Margin="0,30,0,10"
                    Padding="5"
                    MinimumHeightRequest="30"
                    WidthRequest="250"
                    CornerRadius="10">
                    <ScrollView>
                        <expander:SfExpander
                            AnimationDuration="120">
                            <expander:SfExpander.Header>
                                <Label
                                    Text="Change Favourite Driver"
                                    VerticalOptions="Center" />
                            </expander:SfExpander.Header>
                            <expander:SfExpander.Content>
                                <Grid
                                    Padding="5"
                                    MinimumHeightRequest="45"
                                    RowDefinitions="45,*">
                                    <Frame
                                        Margin="10,5,0,10"
                                        Padding="3"
                                        CornerRadius="10"
                                        HeightRequest="45">
                                        <SearchBar
                                            Placeholder="Search Driver"
                                            SearchCommand="{Binding DriverSearchCommand}"
                                            Text="{Binding SearchDriver}" />
                                    </Frame>
                                    <CollectionView
                                        MaximumHeightRequest="225"
                                        Grid.Row="1"
                                        ItemsSource="{Binding DriversForSearch}"
                                        SelectedItem="{Binding SelectedDriver}"
                                        SelectionMode="Single">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate
                                                x:DataType="modelext:MyDriver">
                                                <Grid>
                                                    <Label>
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span
                                                                    Text="• " />
                                                                <Span
                                                                    TextColor="Black"
                                                                    FontFamily="F1Reg"
                                                                    Text="{Binding FullName}" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup>
                                                            <VisualState
                                                                Name="Selected">
                                                                <VisualState.Setters>
                                                                    <Setter
                                                                        Property="BackgroundColor"
                                                                        Value="#99E11900" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState
                                                                Name="Normal">
                                                                <VisualState.Setters>
                                                                    <Setter
                                                                        Property="BackgroundColor"
                                                                        Value="White" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </expander:SfExpander.Content>
                        </expander:SfExpander>
                    </ScrollView>
                </Frame>
                <Frame
                    Grid.Row="11"
                    Grid.RowSpan="2"
                    Margin="0,30,0,10"
                    Padding="5"
                    MinimumHeightRequest="30"
                    WidthRequest="250"
                    CornerRadius="10">
                    <ScrollView>
                        <expander:SfExpander
                            AnimationDuration="120">
                            <expander:SfExpander.Header>
                                <Label
                                    Text="Change Favorite Costructor"
                                    VerticalOptions="Center" />
                            </expander:SfExpander.Header>
                            <expander:SfExpander.Content>
                                <Grid
                                    Padding="5"
                                    MinimumHeightRequest="45"
                                    RowDefinitions="45,*">
                                    <Frame
                                        Margin="10,5,0,10"
                                        Padding="3"
                                        CornerRadius="10"
                                        HeightRequest="45">
                                        <SearchBar
                                            Placeholder="Search Costructor"
                                            SearchCommand="{Binding ConstSearchCommand}"
                                            Text="{Binding SearchConst}" />
                                    </Frame>
                                    <CollectionView
                                        MaximumHeightRequest="225"
                                        Grid.Row="1"
                                        ItemsSource="{Binding ConstsForSearch}"
                                        SelectedItem="{Binding SelectedConst}"
                                        SelectionMode="Single">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate
                                                x:DataType="modelext:Constructor">
                                                <Grid>
                                                    <Label>
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span
                                                                    Text="• " />
                                                                <Span
                                                                    TextColor="Black"
                                                                    FontFamily="F1Reg"
                                                                    Text="{Binding OfficialConstructorName}" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup>
                                                            <VisualState
                                                                Name="Selected">
                                                                <VisualState.Setters>
                                                                    <Setter
                                                                        Property="BackgroundColor"
                                                                        Value="#99E11900" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState
                                                                Name="Normal">
                                                                <VisualState.Setters>
                                                                    <Setter
                                                                        Property="BackgroundColor"
                                                                        Value="White" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </expander:SfExpander.Content>
                        </expander:SfExpander>
                    </ScrollView>
                </Frame>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>