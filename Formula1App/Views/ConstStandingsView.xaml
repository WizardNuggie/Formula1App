<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Formula1App.Views.ConstStandingsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:modelext="clr-namespace:Formula1App.ModelsExt"
    xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
    Title=""
    x:DataType="viewmodel:ConstStandingsViewModel"
    IsEnabled="{Binding NotInServerCall}">
    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ScrollView x:Name="scrlview">
            <CollectionView
                Grid.Row="1"
                Grid.ColumnSpan="2"
                BackgroundColor="#15151D"
                ItemsSource="{Binding Standings}"
                SelectedItem="{Binding SelectedConst}"
                SelectionMode="Single">
                <CollectionView.Header>
                    <Border
                        Margin="0,15,8,2"
                        Stroke="Transparent"
                        StrokeShape="RoundRectangle 0,7,0,7">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToConstCommand}" CommandParameter="{Binding FirstPlace}" />
                        </Border.GestureRecognizers>
                        <Grid
                            BackgroundColor="#383838"
                            ColumnDefinitions="0.5*,0.75*,0.5*,0.5*,3*,4*"
                            RowDefinitions="*,2*">
                            <Label
                                Grid.RowSpan="3"
                                Margin="0,0,-7,0"
                                FontFamily="F1Bold"
                                FontSize="17"
                                HorizontalOptions="End"
                                Text="{Binding FirstPlace.positionText}"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <BoxView
                                Grid.RowSpan="3"
                                Grid.Column="1"
                                Margin="20,0,0,0"
                                HeightRequest="78"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="8"
                                Color="{Binding FirstPlace.Constructor.TeamColor}" />
                            <Label
                                Grid.Column="2"
                                Grid.ColumnSpan="3"
                                Margin="5,0,0,0"
                                FontFamily="F1Bold"
                                FontSize="25"
                                Text="{Binding FirstPlace.Constructor.OfficialConstructorName}"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <CollectionView
                                Grid.Row="1"
                                Grid.Column="2"
                                Grid.ColumnSpan="3"
                                ItemsSource="{Binding FirstPlace.Constructor.Drivers}"
                                SelectionMode="None"
                                VerticalOptions="Start">
                                <CollectionView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToConstCommand}" CommandParameter="{Binding FirstPlace}" />
                                </CollectionView.GestureRecognizers>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="modelext:MyDriverStandings">
                                        <Grid ColumnDefinitions="*,3*">
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Path=BindingContext.GoToConstCommand, Source={x:Reference scrlview}}" CommandParameter="{Binding Path=BindingContext.FirstPlace, Source={x:Reference scrlview}}" />
                                            </Grid.GestureRecognizers>
                                            <Border
                                                Margin="0,0,0,5"
                                                Padding="-5"
                                                HeightRequest="20"
                                                HorizontalOptions="Start"
                                                Stroke="Transparent"
                                                StrokeShape="RoundRectangle 15"
                                                WidthRequest="38">
                                                <Image
                                                    HorizontalOptions="Center"
                                                    Source="{Binding NationalityFlag}"
                                                    VerticalOptions="Center"
                                                    WidthRequest="40" />
                                            </Border>
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="F1Reg"
                                                HorizontalOptions="Start"
                                                Text="{Binding LastName}"
                                                TextColor="White" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Image
                                Grid.RowSpan="3"
                                Grid.Column="5"
                                Margin="0,0,-4,-5"
                                HeightRequest="120"
                                HorizontalOptions="End"
                                RotationY="180"
                                Source="{Binding FirstPlace.Constructor.PhotoUrl}"
                                TranslationX="55"
                                VerticalOptions="End" />
                            <Border
                                Grid.RowSpan="3"
                                Grid.Column="5"
                                Margin="0,0,40,5"
                                Padding="3"
                                BackgroundColor="#E0E0E1"
                                HorizontalOptions="End"
                                Stroke="Transparent"
                                VerticalOptions="End"
                                WidthRequest="60">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20" />
                                </Border.StrokeShape>
                                <Label
                                    FontSize="10"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    MinimumWidthRequest="40">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontFamily="F1Bold" Text="{Binding FirstPlace.points}" />
                                            <Span Text=" " />
                                            <Span FontFamily="F1Reg" Text="PTS" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Border>
                            <Label
                                Grid.RowSpan="3"
                                Grid.Column="5"
                                Margin="0,0,17,0"
                                FontFamily="F1Bold"
                                FontSize="20"
                                HorizontalOptions="End"
                                Text="&gt;"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="modelext:Constructorstanding">
                        <Border
                            Margin="0,2,8,2"
                            Padding="5"
                            Background="White"
                            Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0,7,0,7" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,*,6*,2*,*" RowDefinitions="*,*">
                                <Label
                                    Grid.RowSpan="2"
                                    FontFamily="F1Bold"
                                    HorizontalOptions="Center"
                                    Text="{Binding positionText}"
                                    VerticalOptions="Center" />
                                <BoxView
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    HeightRequest="40"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    WidthRequest="8"
                                    Color="{Binding Constructor.TeamColor}" />
                                <Label Grid.Column="2" FontSize="15">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontFamily="F1Bold" Text="{Binding Constructor.OfficialConstructorName}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    FontFamily="F1Reg"
                                    FontSize="10"
                                    Text="{Binding DriversString}"
                                    VerticalOptions="End" />
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    Padding="3"
                                    BackgroundColor="#E0E0E1"
                                    HorizontalOptions="End"
                                    Stroke="Transparent"
                                    VerticalOptions="Center"
                                    WidthRequest="60">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20" />
                                    </Border.StrokeShape>
                                    <Label
                                        FontSize="10"
                                        HorizontalOptions="Center"
                                        HorizontalTextAlignment="Center"
                                        MinimumWidthRequest="40">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="F1Bold" Text="{Binding points}" />
                                                <Span Text=" " />
                                                <Span FontFamily="F1Reg" Text="PTS" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Border>
                                <Label
                                    Grid.RowSpan="2"
                                    Grid.Column="4"
                                    FontFamily="F1Bold"
                                    HorizontalOptions="Center"
                                    Text="&gt;"
                                    TextColor="#E11900"
                                    VerticalOptions="Center" />
                            </Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="White" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="White" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Footer>
                    <Button
                        Margin="20,25,20,50"
                        BackgroundColor="#EE0000"
                        Command="{Binding GoToPrevStandings}"
                        Text="SEE PREVIOUS SEASONS' RESULTS"
                        TextColor="White" />
                </CollectionView.Footer>
            </CollectionView>
        </ScrollView>
    </RefreshView>
</ContentPage>