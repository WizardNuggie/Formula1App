<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Formula1App.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
    Title="Login"
    x:DataType="viewmodel:LoginViewModel">
    <!--nice white color #f7f4f1-->
    <VerticalStackLayout
        Padding="10">
        <Label
            Padding="5"
            FontAttributes="Bold"
            FontFamily="Consolas"
            FontSize="30"
            HorizontalOptions="Center"
            Text="Login"
            TextColor="Black" />

        <Label
            FontFamily="Consolas"
            Text="Username" />
        <Frame
            Margin="0,10,0,0"
            Padding="3"
            CornerRadius="10">
            <Entry
                x:Name="Username"
                Margin="5,0,0,0"
                FontSize="18"
                Placeholder="Username"
                Text="{Binding Username}" />
        </Frame>
        <Label
            FontFamily="Consolas"
            Text="Password" />
        <Frame
            Margin="0,10,0,0"
            Padding="3"
            CornerRadius="10">
            <Entry
                x:Name="Password"
                Margin="5,0,0,0"
                FontSize="18"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Password}" />
        </Frame>
        <Button
            x:Name="LoginButton"
            Margin="0,20,0,0"
            BackgroundColor="#E11900"
            Command="{Binding LoginCommand}"
            HorizontalOptions="FillAndExpand"
            Text="Login"
            VerticalOptions="CenterAndExpand"/>
        <ActivityIndicator
            IsRunning="{Binding InServerCall}"
            Color="#E11900" />
    </VerticalStackLayout>
</ContentPage>