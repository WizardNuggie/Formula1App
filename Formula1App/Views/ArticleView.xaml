<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Formula1App.Views.ArticleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Formula1App.Models"
    xmlns:viewmodel="clr-namespace:Formula1App.ViewModels"
    x:DataType="viewmodel:ArticleViewModel">
    <ScrollView>
        <StackLayout Padding="10,0">
            <CollectionView ItemsLayout="VerticalGrid, 3" ItemsSource="{Binding Article.Subjects}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Subject">
                        <Border
                            Margin="0"
                            Padding="0"
                            HeightRequest="25"
                            Stroke="#E11900"
                            StrokeThickness="2"
                            WidthRequest="100">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                TextColor="#E11900"
                                VerticalOptions="Center" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label
                Margin="0,25,0,0"
                FontSize="40"
                Text="{Binding Article.Title}" />
            <BoxView
                Margin="0,0,0,20"
                HeightRequest="1"
                Color="Grey" />
            <Label
                Text="{Binding Article.Writer.Name}"
                HorizontalOptions="End"/>
            <Border
                Margin="0,15,0,5"
                HorizontalOptions="Center"
                Stroke="Transparent"
                VerticalOptions="Center"
                WidthRequest="380">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Image
                    Aspect="AspectFill"
                    Source="{Binding Article.FullImagePath}"
                    WidthRequest="380" />
            </Border>
            <Label Text="{Binding Article.Text}" />
        </StackLayout>
    </ScrollView>
</ContentPage>